<h1>Edit <%= @chapter.name %></h1>

<% if @chapter.errors.any? %>
  <h3> Please fix these errors: </h3>
  <ul>
    <% @chapter.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
 <%end%>

<form action="/chapters/<%=@chapter.id%>" method="post">
  <input name="_method" type='hidden' value='patch'>
  <label for="chapter_name">Name</label>
  <input id="chapter_name" name="chapter[name]" type="text" value='<%=@chapter.name%>'>
  <label for="chapter_number">Number</label>
  <input id="chapter_number" name="chapter[number]" type="text" value='<%=@chapter.number%>'>
  <button type="submit">Update Lesson</button>
</form>
