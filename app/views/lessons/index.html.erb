<h1>Lessons</h1>
<% if @lesson.errors.any? %>
  <h3> Please fix these errors: </h3>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
 <%end%>

<ul>
  <% @lessons.order(:number).each do |lesson| %>
   <li><a href="/lessons/<%= lesson.id %>"><%= lesson.name %></a></li>
  <% end %>
</ul>

<h1>New Lesson</h1>

<form action="/lessons/" method="post">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="lesson[name]" type="text">
  <label for="lesson_description">Description</label>
  <input id="lesson_description" name="lesson[description]" type="text">
  <label for="lesson_number">Number</label>
  <input id="lesson_number" name="lesson[number]" type="text">
  <select id="lesson_section_id" name="lesson[section_id]" type='string'>
    <% Section.all.each do |section| %>
      <option value="<%= section.id%>"><%= section.name %></option>
    <%end%>
  </select>
  <button>Create Lesson</button>
</form>
